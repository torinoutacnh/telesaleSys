@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.ScheduleFormModel
@{
    ViewBag.Name = "Source Data";
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
    <link href="~/Content/Report/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <script src="~/Content/Report/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/Report/vendor/jquery/jquery.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="/Admin/Schedule">Quản lý Schedule</a>
            </li>

        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">

            <div class="alert alert-block alert-info">
                Tạo Mới
            </div>
            @using (Html.BeginForm("Create", "Schedule", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="green ace-icon fa fa-home bigger-120"></i>
                                Nội Dung
                            </a>
                        </li>

                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Code)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Code)
                                    @Html.ValidationMessageFor(model => model.Code)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Name)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="form-group ">

                                @Html.MyLabelFor(model => model.UserDataId)
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.UserDataId, Model.ListDataUser)
                                    @Html.ValidationMessageFor(model => model.UserDataId)
                                </div>
                            </div>

                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.IsActive)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.IsActive)
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>

                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Deadline)
                                <div class="col-sm-9" id="datetimepicker2">
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>

                        </div>



                    </div>
                </div>



                @*
                    partial for group button
                *@
                @Html.Partial("_PartialButtonGroup", "/Admin/Schedule")
            }
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#datetimepicker2').datetimepicker({
            locale: 'ru'
        });
    });
</script>