@model Outsourcing.Data.Models.Staff
@{
    ViewBag.Title = "Thời trang nữ cao cấp , các mẫu thiết kế đẹp |LYCASA.VN";
    ViewBag.Description = "Chúng tôi tin tưởng trong việc cung cấp dịch vụ khách hàng tuyệt vời và chúng " +
        "tôi được đáp ứng các khách hàng của chúng tôi. Nếu bạn có bất kỳ câu hỏi, ý kiến hoặc đề nghị, vui lòng liên hệ cho chúng tôi " +
        "Chúng tôi rất mong nhận được phản hồi từ bạn. ";
    ViewBag.Keywords = "LYCASA.VN, lycasa, thời trang nữ, váy đẹp, đầm đẹp";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script>
    function sendContact() {
        var Name, Email, PhoneNumber, message;
        Name = document.getElementById("CustomerName").value;
        Email = document.getElementById("Email").value;
        PhoneNumber = document.getElementById("PhoneNumber").value;
        message = document.getElementById("content").value;
        if (Name != "" && Email != "" && PhoneNumber != "" && message != "") {
            alert("Gửi Tin Nhắn Thành Công");
        }
    }

</script>
<div class="breadcrumb-area details-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap">
                    <nav aria-label="breadcrumb">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"></li>
                            <li class="breadcrumb-item"></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- contact us area -->
<div class="contact_area pt-90 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="contact_message">
                    <div class="contact_title">
                        <h2>@Html.Raw(Resources.Lacasa_Send)</h2>
                    </div>
                    <form action="/Home/ContactUS" method="post" class="contact-form">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <input name="Name" id="CustomerName" placeholder="@Html.Raw(Resources.Lacasa_Name) *" type="text" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input name="Yahoo" id="Email" placeholder="Email *" type="text" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input name="Rename" placeholder="@Html.Raw(Resources.Lacasa_Title) *" type="text" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input name="Phone" id="PhoneNumber" placeholder="@Html.Raw(Resources.Lacasa_PhoneNumber) *" type="text" required>
                            </div>
                            <div class="col-12">
                                <div class="contact_textarea">
                                    <textarea placeholder="@Html.Raw(Resources.Lacasa_Content) *" id="content" name="Description" class="form-control2" required></textarea>
                                </div>
                                <button type="submit" class="res-btn" onclick="sendContact()">@Html.Raw(Resources.Lacasa_Send)</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="contact_info_wrapper pl-90">
                    <div class="contact_title">
                        <h4>@Html.Raw(Resources.Lacasa_Contact)</h4>
                    </div>

                    <div class="contact_info mb-15">
                        <ul>

                            <li><i class="fa fa-address-card"></i>  @Html.Raw(Resources.Lacasa_FooterAdd)</li>
                            <li><i class="fa fa-envelope-o"></i> Email: lynguyen@lycasa.vn</li>
                            <li><i class="fa fa-phone"></i>@Html.Raw(Resources.Lacasa_Phone): 028 3620 2721 | Hotline: 090 66 44 030</li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="map-wrapper" style="margin-bottom:30px">
    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="col-lg-12">
                <div class="map-area map-2">
                    <iframe class="actAsDiv" style="width:100%;height:100%;" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;q=LYCASA%20CO.%2C%20LTD%2C%2068A%2C%20T%C3%A2n%20Th%E1%BB%9Bi%20Nh%C3%AC%2C%20H%C3%B3c%20M%C3%B4n%2C%20H%E1%BB%93%20Ch%C3%AD%20Minh%2C%20Vietnam&amp;aq=0&amp;ie=UTF8&amp;t=m&amp;z=16&amp;iwloc=A&amp;output=embed"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>